scope: postgres
namespace: /db/
name: postgresql0

restapi:
  host: {{ master_ip }}:8008
  connect_address: {{ master_ip }}:8008

etcd:
  host: {{ etcd_ip }}:2379

bootstrap:
  dcs:
    ttl: 30
    loop_wait: 10
    retry_timeout: 10
    maximun_lag_on_failover: 1048576
    postgresql:
      use_pg_rewind: true

  initdb:
  - encoding: UTF8
  - data-checksums

  pg_hba:
  - host replication replicator 127.0.0.1/32 md5
  - host replication replicator {{ master_ip }}/0 md5
  - host replication replicator {{ slave_1_ip }}/0 md5
  - host replication replicator {{ slave_2_ip }}/0 md5
  - host all all 0.0.0.0/0 md5

  users:
    admin:
      password: admin
      options:
        - createrole
        - createdb

postgresql:
  listen: {{ master_ip }}: 5432
  connect_address: {{ master_ip }}
  data_dir: /data/patroni
  pgpass: /tmp/pgpass
  authentication:
    replication:
      username: replicator
      password: {{ rep_pass }}
    superuser:
      username: postgres
      password: {{ postgres_password }}
  parametera:
    unix_socket_directories: '.'

tags:
  nofailover: false
  noloadbalance: false
  clonefrom: false
  nosync: false
